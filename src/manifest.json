{
"update_url": "https://clients2.google.com/service/update2/crx",

	"manifest_version": 2,
	"name": "Bitcoin Sneak Peek",
	"version": "0.3",
	"description": "Instantly see the balance of a Bitcoin address mentioned on any web page.",
	"permissions": ["https://blockchain.info/","https://blockexplorer.com/", "https://dogechain.info/"],
	"web_accessible_resources": [
		"i/bitcoinsneakpeak32.png",
		"i/dogecoinsneakpeak32.png"
	],
	"icons": {
		"128": "i/logo128x128.png",
		"48": "i/logo48x48.png"		
	},
	"content_scripts": 
	[
		{
			"matches": ["*://*/*"],
			"js": ["content_script.js"],
			"run_at": "document_end"
		}
	]
}

